<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.main.HomeFragment">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="80dp"
                android:paddingBottom="60dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@color/grey_dashboard"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/laundry_transaksi"
                        >

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transaksi"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="16sp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@color/grey_dashboard"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/laundry_topup"
                        android:visibility="gone"
                        >

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Konfirmasi Top up"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="16sp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@color/grey_dashboard"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:id="@+id/laundry_category"
                        >

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kategori"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="16sp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@color/grey_dashboard"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/laundry_categorize_clothe"
                        android:visibility="gone"
                        >

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kategori Pakaian"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="16sp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@color/grey_dashboard"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/laundry_type"
                        android:visibility="gone"

                        >

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipe Laundry"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="16sp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@color/grey_dashboard"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/laundry_user_manage"
                        android:visibility="gone"

                        >

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Pengelola"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="16sp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@color/grey_dashboard"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/laundry_user"
                        android:visibility="gone"

                        >

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="16sp"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>
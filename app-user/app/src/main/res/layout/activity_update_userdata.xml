<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
  <data>
    <variable
        name="user_detail"
        type="com.speedlaundryapp.userapp.model.user.data.User" />
  </data>
  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
      android:layout_width="match_parent"
      android:id="@+id/refresh"
      android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@color/blue_top_main"></LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_above="@id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_marginBottom="120dp"
            android:layout_height="match_parent"
            tools:ignore="NotSibling">
          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">
                  <ImageView
                      android:layout_width="25dp"
                      android:layout_marginLeft="15dp"
                      android:layout_height="30dp"
                      android:id="@+id/back"
                      android:src="@drawable/back_white_icon"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:id="@+id/txtAction"
                    android:text="Data Pengiriman"
                    android:textColor="@color/white"
                    android:textSize="18dp"></TextView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                </LinearLayout>
              </LinearLayout>
              <androidx.cardview.widget.CardView
                  android:id="@+id/card_view"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_marginBottom="5dp"
                  android:layout_marginTop="5dp"
                  app:cardElevation="0dp"
                  app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">
                  <LinearLayout
                      android:id="@+id/lytNama"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:orientation="vertical">
                    <TextView
                        style="@style/custom_edittext_lable"
                        android:text="Nama" />
                    <EditText
                        android:id="@+id/edtNama"
                        style="@style/custom_edittext"
                        android:text="@{user_detail.userDetail.shipmentName}"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="text"></EditText>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/lytFee"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:orientation="vertical">
                    <TextView
                        style="@style/custom_edittext_lable"
                        android:text="Nomor Handphone" />
                    <EditText
                        android:id="@+id/edtPhone"
                        android:text="@{user_detail.userDetail.phoneNumber}"
                        style="@style/custom_edittext"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="number"></EditText>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/lytAddress"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:orientation="vertical">
                    <TextView
                        style="@style/custom_edittext_lable"
                        android:text="Alamat Pengiriman" />
                    <EditText
                        android:id="@+id/edtAddress"
                        android:text="@{user_detail.userDetail.shipmentAddress}"
                        style="@style/custom_edittext"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textMultiLine"></EditText>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/lytMapUrl"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:orientation="vertical">
                    <TextView
                        style="@style/custom_edittext_lable"
                        android:text="Link Alamat Google Maps" />

                    <EditText
                        android:id="@+id/edtMapUrl"
                        android:text="@{user_detail.userDetail.mapAddressUrl}"
                        style="@style/custom_edittext"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="textMultiLine"></EditText>
                  </LinearLayout>
                </LinearLayout>
              </androidx.cardview.widget.CardView>
            </LinearLayout>
          </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:padding="2dp"
            app:cardElevation="0dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="3dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
            </LinearLayout>
            <Button
                android:layout_margin="10dp"
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:fontFamily="@font/poppins_bold"
                android:textAllCaps="false"
                android:letterSpacing="0.10"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@drawable/blue_button"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:layout_alignParentBottom="true" />
          </LinearLayout>
        </androidx.cardview.widget.CardView>
      </RelativeLayout>
    </LinearLayout>
  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>